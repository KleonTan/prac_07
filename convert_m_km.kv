BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: 0.3
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        size_hint_y: 0.4
        text: 'Convert m to km'
        on_press: app.handle_calculate()
    Label:
        size_hint_y: 0.3
        id: output_label
        text: '54.71756'
        font_size:50
        color: (120,0,140,1)
